    <script>
        $(document).ready(function () {


          async function putItem(requestUpdate) {
                  try {
                    const response = await fetch(requestUpdate);
                     if(!response.status == 204)
                    {
                         Swal.fire({
                            title: "Bulunamadı",
                            text: "Güncelleme işlemi başarılı olamadı.",
                            icon: "danger"
                        });
                        return;
                    }

                  } catch (error) {
                      Swal.fire({
                            title: "Başarısız!",
                            text: "Güncellenirken hatayla karşılaşıldı.",
                            icon: "danger"
                        });
                  }
           }

            async function deleteItem(requestDelete, objectDelete) {
                  try {
                    const response = await fetch(requestDelete);
                                       
                    if(response.status == 204)
                    {
                        Swal.fire({
                            title: "Silindi!",
                            text: "Başarıyla silindi.",
                            icon: "success"
                        });
                        objectDelete.closest("tr").remove();
                        
                        return;
                    }
                     Swal.fire({
                            title: "Bulunamadı",
                            text: "Silme işlemi başarılı olamadı.",
                            icon: "danger"
                        });
                    
                     
                  } catch (error) {
                     Swal.fire({
                            title: "Başarısız!",
                            text: "Silme işlemi sırasında hatayla karşılaşıldı.",
                            icon: "danger"
                        });
                  }
           }


            $(".combo").on("change", function(e){

                 var selectedVal = $(this).val();

                 var orderId = $(this).closest("tr").find("td:first").text().trim();

         
                 const myHeaders = new Headers();
                 myHeaders.append("Content-Type", "application/json");

                  const request1 = new Request(`https://localhost:7177/api/v1/admin/Order/admin-update-status-order/${orderId}`, {
                          method: "PUT",
                          headers: myHeaders,
                          body: JSON.stringify({ Id: `${selectedVal}` }),
                  });

                  putItem(request1);

            });
            

          $(document).on("click", ".btn-delete-product", function (e) {
                e.preventDefault();

                Swal.fire({
                    title: "Ürünü silmek istediğinize emin misiniz?",
                    text: "Ürünü kalıcı olarak silinecek.",
                    icon: "warning",
                    showCancelButton: true,  
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Delete"
                }).then((result) => {
                    if (result.isConfirmed) {

                        var productId = $(this).closest("tr").find("td:first").text().trim();

                         const myHeaders = new Headers();
                         myHeaders.append("Content-Type", "application/json");

                          const request2 = new Request(`https://localhost:7177/api/v1/admin/Product/"delete-product/${productId}`, {
                          method: "DELETE",
                          headers: myHeaders,

                        });

                          var deleteProduct= $(this);
                          deleteItem(request2, deleteProduct);
                         
                    }
                });
            });


             $(document).on("click", ".btn-delete-order", function (e) {
                

                Swal.fire({
                    title: "Siparişi iptal etmek istediğinize emin misiniz?",
                    text: "Sipariş kalıcı olarak iptal edilecek..",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Delete"
                }).then((result) => {
                    if (result.isConfirmed) {

                         var orderId2 = $(this).closest("tr").find("td:first").text().trim();

                         const myHeaders = new Headers();
                         myHeaders.append("Content-Type", "application/json");

                          const request3 = new Request(`https://localhost:7177/api/v1/admin/Order/admin-cancel-order/${orderId2}`, {
                          method: "DELETE",
                          headers: myHeaders,

                        });

                        var deleteOrder= $(this);
                        deleteItem(request3, deleteOrder );
                        
                        
                    }
                });
            });
        });


    </script>
  
   
