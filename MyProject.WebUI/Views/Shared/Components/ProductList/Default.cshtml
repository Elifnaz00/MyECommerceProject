@model IEnumerable<ProductNewViewModel>


    <div class="row">
@foreach( var item in Model)
{
    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6">
        <div class="single-new-arrival mb-50 text-center wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
            <div class="popular-img">
                    <a href="@Url.Action("ProductDetails", "Shop", new { id = item.Id })">
                        <img src="@item.ImageUrl" class="img-fluid" alt="" />
                <div class="favorit-items">
                    <!-- <span class="flaticon-heart"></span> -->
                    
                </div>
            </div>
            <div class="popular-caption">
                    <h3><a href="@Url.Action("ProductDetails", "Shop", new { id = item.Id })">@item.Title </a></h3>
                <div class="rating mb-10">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                </div>
                <span>@item.Price ₺</span>
            </div>
        </div>
    </div>

}
</div>
<div class="row justify-content-center">
    <div class="room-btn">
        <a href="/Shop/ShopProductList" class="border-btn">Tüm Ürünleri Gör</a>
    </div>
</div>




