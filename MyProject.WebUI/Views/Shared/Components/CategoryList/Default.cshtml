@{
}

<div class="popular-items pt-50">
    <div class="container-fluid">
        <div class="row">
            @foreach(var item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-popular-items mb-50 text-center wow fadeInUp" data-wow-duration="1s" data-wow-delay=".1s">
                        <div class="popular-img">
                            <img src=@item.ImageCategory alt="">
                            <img src=""/>
                            <div class="img-cap">
                                <span>@item.CategoryName</span>
                            </div>
                            <div class="favorit-items">
                                <a href="@Url.Action("GetProductByCategory", "Shop", new { categoryId = item.Id })" class="btn"> Daha Fazlasını Gör</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
          
           
        </div>
    </div>
</div>
