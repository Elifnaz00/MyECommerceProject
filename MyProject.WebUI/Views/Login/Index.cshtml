@model UserLoginViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section class="vh-100" style="">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                
                               
                                
                                <form method="post" asp-controller="Login" asp-action="Index">
                                   
                               
                                    <span>  @ViewData["LoginMsg"]</span>
                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">
                                        Hesabınızda oturum açın
                                    </h5>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        
                                        <input type="text" id="form2Example17" name="UserName" class="form-control form-control-lg" placeholder="Kullanıcı Adı" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                        
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="password" id="form2Example27" name="Password" class="form-control form-control-lg" placeholder="Şifre"/>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                                <div class="checkbox">
                                    <label asp-for="RememberMe">
                                        <input asp-for="RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="pt-1 mb-4">
                                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Giriş Yap</button>
                                    </div>

                                    <a class="small text-muted" href="#!">Şifreni mi unuttun?</a>
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        Hesabınız yok mu? <a href="/Login/SignUp"
                                                                  style="color: #393f81;">Kayıt Ol</a>
                                    </p>
                                    <a href="#!" class="small text-muted">Kullanım Koşulları</a>
                                    <a href="#!" class="small text-muted">Gizlilik Politikası</a>
                                </form>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


