@using MyProject.WebUI.Models.AdminModel.OrderModel
@model IEnumerable<OrderListModel>

@{
    ViewData["Title"] = "CancelledOrders";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 col-md-12 col-12 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4>İptal Edilen Siparişler</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tr>
                            <th>Sipariş id</th>
                            <th>Ad Soyad</th>
                            <th>Sipariş Tarihi</th>
                            <th>Sipariş Tutarı</th> 
                            <th>Durum</th>
                            <th>Detay</th>
                        </tr>

                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.AppUserNameSurname</td>
                                <td>@order.CreateDate</td>
                                <td>@order.TotalAmount</td>
                                <td><span class="badge badge-danger"> @order.OrderStatusName</span></td>
                                
                                <td>
                                    <a asp-action="OrderDetail" asp-route-id="@order.Id" class="btn btn-primary">Sipariş Detay</a>
                                </td>
                            </tr>
                        }
                      
                    </table>
                </div>
            </div>
            <div class="card-footer text-right">
                <nav class="d-inline-block">
                    <ul class="pagination mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">
                                1 <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

</div>

