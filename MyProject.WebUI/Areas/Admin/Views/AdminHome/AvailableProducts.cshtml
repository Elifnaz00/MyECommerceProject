@using MyProject.WebUI.Models.AdminModel.ProductModel
@model IEnumerable<ProductListViewModel>
@{
    ViewData["Title"] = "AvailableProducts";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<div class="row">
    <div class="col-lg-12 col-md-12 col-12 col-sm-12">
        <div class="card">
            <div class="card-header">
                <h4>Mevcut Ürünler</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <tr>

                            <th>Ürün İd</th>
                            <th>Ürün Adı</th>
                            <th>Ürün Açıklaması</th>
                            <th>Fiyat</th>
                            <th>Beden</th>
                            <th>Renk</th>
                            <th>Kategori</th>
                            <th>Oluşturulma Tarihi</th>
                            <th>Stock</th>
                            <th>Düzenle</th>
                            <th>Detay</th>
                        </tr>
                        @foreach(var item in Model)
                        {
                            <tr>

                                <td class="product-id">@item.Id</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td> @item.Price  </td>
                                <td>@item.Size</td>
                                <td>@item.Color</td>
                                <td> @item.CategoryCategoryName </td>
                                <td> @item.CreateDate </td>
                                <td> @item.Stock  </td>
                                <td>

                                    <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-primary btn-sm"> Düzenle </a>
                                    <button class="btn btn-delete-product btn-danger"> <i class="fas fa-times"></i></button>

                                </td>
                                <td>
                                    <button class="btn btn-info btn-sm btn-product-detail"
                                            data-id="@item.Id">
                                        Ürün Detay
                                    </button>
                                </td>

                            </tr>
                        }
                       
                    </table>
                </div>
                <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary btn-sm"> Ürün Ekle</a>
                
            </div>
           
            <div class="card-footer text-right">
                <nav class="d-inline-block">
                    <ul class="pagination mb-0">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1"><i class="fas fa-chevron-left"></i></a>
                        </li>
                        <li class="page-item active">
                            <a class="page-link" href="#">
                                1 <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#"><i class="fas fa-chevron-right"></i></a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    
</div>




               
                
                   
                
               





